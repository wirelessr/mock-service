{
  "rules": [
    {
      "path": "/api/error/400",
      "response": {
        "error": "Bad Request",
        "message": "Invalid request parameters",
        "code": 400
      },
      "code": 400
    },
    {
      "path": "/api/error/401",
      "response": {
        "error": "Unauthorized",
        "message": "Authentication required"
      },
      "code": 401
    },
    {
      "path": "/api/error/403",
      "response": {
        "error": "Forbidden",
        "message": "Access denied"
      },
      "code": 403
    },
    {
      "path": "/api/error/500",
      "response": {
        "error": "Internal Server Error",
        "message": "Something went wrong on our end"
      },
      "code": 500
    }
  ]
}